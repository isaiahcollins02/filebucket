<resources>

    <!-- Base application isDark. -->
    <style name="AppTheme.Core.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="colorBackgroundFloating">@color/colorToolbarDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundDark</item>
        <item name="md_corner_radius">8dp</item>
        <item name="md_color_content">@color/colorPrimaryText</item>
        <item name="md_color_button_text">@color/colorDefault</item>
    </style>

    <style name="AppTheme.Core.AMOLED" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="colorBackgroundFloating">@color/colorGenericBlack</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundAMOLED</item>
        <item name="md_corner_radius">8dp</item>
        <item name="md_color_content">@color/colorPrimaryText</item>
        <item name="md_color_button_text">@color/colorDefault</item>
    </style>

    <style name="AppTheme.Core.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundLight</item>
        <item name="md_corner_radius">8dp</item>
        <item name="md_color_content">@color/colorSecondaryText</item>
        <item name="md_color_button_text">@color/colorDefault</item>
    </style>

    <style name="AppTheme.Core.Default" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundLight</item>
        <item name="md_corner_radius">8dp</item>
        <item name="md_color_content">@color/colorSecondaryText</item>
        <item name="md_color_button_text">@color/colorDefault</item>
    </style>

    <style name="AppTheme.FirstRun" parent="AppTheme.Core.Light">
        <item name="android:windowBackground">@color/colorFirstRunBackground</item>
        <item name="android:windowAnimationStyle">@style/SlidingTransition</item>
    </style>

    <!-- UI Components -->
    <!-- BottomSheets, Dialogs etc -->

    <style name="AppTheme.BottomSheet.Light" parent="BaseBottomSheetDialog.Light"/>

    <style name="AppTheme.BottomSheet.Dark" parent="BaseBottomSheetDialog.Dark"/>

    <style name="AppTheme.BottomSheet.AMOLED" parent="BaseBottomSheetDialog.AMOLED"/>

    <style name="BaseBottomSheetDialog.Light" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetLayout.Light</item>
    </style>

    <style name="BaseBottomSheetDialog.Dark" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetLayout.Dark</item>
    </style>

    <style name="BaseBottomSheetDialog.AMOLED" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetLayout.AMOLED</item>
    </style>

    <style name="BottomSheetLayout.Light" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_sheet_light</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_margin_end</item>
    </style>

    <style name="BottomSheetLayout.Dark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_sheet_dark</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_margin_end</item>
    </style>

    <style name="BottomSheetLayout.AMOLED" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_sheet_amoled</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_margin_end</item>
    </style>

    <!-- Transitions -->

    <style name="SlidingTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Widgets -->
    <!-- ActionBars, Buttons, TextFields and etc -->

    <style name="AppTheme.Toolbar.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar.Guidelines</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionButton.Overflow</item>
    </style>

    <style name="AppTheme.Toolbar.Dark" parent="Theme.MaterialComponents">
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar.Guidelines</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionButton.Overflow</item>
    </style>

    <style name="AppTheme.Toolbar.Guidelines" parent="Widget.AppCompat.Toolbar">
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/toolbar_keyline</item>
        <item name="maxButtonHeight">48dp</item>
    </style>

    <style name="AppTheme.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/colorSecondaryText</item>
        <item name="android:minWidth">48dp</item>
    </style>
    <style name="AppTheme.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorSecondaryText</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


    <style name="AppTheme.Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
