<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextAppearance -->

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/slate_for_oneplus_regular</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="AppTheme.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/font_slate_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextAppearance.AppBar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/font_slate_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_slate_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="AppTheme.TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/font_slate_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/slate_for_oneplus_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="AppTheme.TextAppearance.ListItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/font_slate_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.TextAppearance.ListItem.Secondary" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/font_slate_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="AppTheme.TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/font_slate_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.PreferenceGroup" parent="AppTheme.TextAppearance.Body2">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Preferences -->
    <string name="settings_key_theme" translatable="false">appThemePreference</string>
    <string name="settings_key_metadata" translatable="false">metadataPreference</string>
    <string name="settings_key_image_preview" translatable="false">previewPreference</string>
    <string name="settings_key_file_notifications" translatable="false">notificationFilePreference</string>
    <string name="settings_key_update_notification" translatable="false">notificationPackagePreference</string>
    <string name="settings_key_app_notification" translatable="false">notificationAppPreference</string>
    <string name="settings_key_diagnostics" translatable="false">diagnosticsPreference</string>
    <string name="settings_key_crash" translatable="false">crashPreference</string>
    <string name="settings_key_directory" translatable="false">directoryPreference</string>
    <string name="settings_key_feedback" translatable="false">feedbackPreference</string>
    <string name="settings_key_terms" translatable="false">termsPreference</string>
    <string name="settings_key_privacy_policy" translatable="false">privacyPolicyPreference</string>
    <string name="settings_key_licenses" translatable="false">licensesPreference</string>
    <string name="settings_key_version" translatable="false">versionPreference</string>

    <style name="AppTheme.Preference.Core" parent="@style/Preference.Material">
        <item name="android:layout">@layout/layout_preference_core</item>
    </style>

    <style name="AppTheme.Preference.Group" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/layout_preference_group</item>
    </style>

    <style name="AppTheme.Preference.Switch" parent="@style/Preference.SwitchPreference.Material">
        <item name="android:layout">@layout/layout_preference_core</item>
    </style>

    <style name="AppTheme.Preference.Switch.Compat" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/layout_preference_core</item>
    </style>

    <style name="AppTheme.Preference.CheckBox" parent="@style/Preference.CheckBoxPreference.Material">
        <item name="android:layout">@layout/layout_preference_core</item>
    </style>

    <!-- Navigation Keys -->
    <string name="sharedNavKey" translatable="false">sharedNav</string>
    <string name="notificationNavKey" translatable="false">notificationNav</string>
    <string name="storageNavKey" translatable="false">storageNav</string>
    <string name="secureNavKey" translatable="false">secureNav</string>
    <string name="resetNavKey" translatable="false">resetNav</string>
    <string name="signoutNavKey" translatable="false">signoutKey</string>
    <string name="settingsNavKey" translatable="false">settingsNav</string>
    <string name="aboutNavKey" translatable="false">aboutNav</string>

</resources>