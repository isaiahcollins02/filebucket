<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader
            android:title="@string/pref_cat_account">

        <Preference
                android:key="accountPref" />

        <Preference
                android:key="signoutPref"
                android:title="@string/pref_sign_out"/>

    </com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader>

    <com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader
            android:title="@string/pref_cat_display" >

        <Preference
                android:key="appThemePref"
                android:title="@string/pref_application_theme_title"
                android:summary="@string/pref_application_theme_item_default"/>

        <Preference
                android:key="metadataPref"
                android:title="@string/pref_metadata_title"
                android:summary="@string/pref_metadata_item_timestamp"/>

        <SwitchPreference
                android:key="previewPref"
                android:title="@string/pref_image_previews_title"
                android:summary="@string/pref_image_previews_summary"
                android:defaultValue="true"/>

    </com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader>

    <com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader
            android:title="@string/pref_cat_notifications">

        <CheckBoxPreference
                android:key="filesNotifPref"
                android:title="@string/pref_new_files_title"
                android:summary="@string/pref_new_files_summary"
                android:defaultValue="true"/>

        <CheckBoxPreference
                android:key="updateNotifPref"
                android:title="@string/pref_new_app_version_title"
                android:summary="@string/pref_new_app_version_summary"
                android:defaultValue="true"/>

    </com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader>

    <com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader
            android:title="@string/pref_cat_privacy">

        <SwitchPreference
                android:key="diagnosticsPref"
                android:title="@string/pref_diagnostics_title"
                android:summary="@string/pref_diagnostics_summary"
                android:defaultValue="true"/>

        <SwitchPreference
                android:key="crashPref"
                android:title="@string/pref_anonymous_crash_reporting_title"
                android:summary="@string/pref_anonymous_crash_reporting_summary"
                android:dependency="diagnosticsPref"
                android:defaultValue="true"/>

    </com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader>

    <com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader
            android:title="@string/pref_cat_general">

        <Preference
                android:key="directoryPref"
                android:title="@string/pref_default_directory_title"/>

        <Preference
                android:key="supportPref"
                android:title="@string/pref_requests_feedback"/>

        <Preference
                android:key="versionPref"
                android:title="@string/pref_help_version"/>

    </com.isaiahvonrundstedt.bucket.core.components.custom.AppSettingsHeader>

</PreferenceScreen>