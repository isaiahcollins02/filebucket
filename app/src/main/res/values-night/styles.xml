<resources>

    <!-- Base application isDark. -->
    <style name="AppTheme.Core" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="md_corner_radius">8dp</item>
        <item name="md_color_button_text">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FirstRun" parent="AppTheme.Core">
        <item name="android:windowAnimationStyle">@style/SlidingTransition</item>
    </style>

    <!-- UI Components -->
    <!-- BottomSheets, Dialogs etc -->

    <style name="AppTheme.BottomSheet" parent="BaseBottomSheetDialog"/>

    <style name="BaseBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetLayout</item>
    </style>

    <style name="BottomSheetLayout" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_margin_end</item>
    </style>

    <!-- Transitions -->

    <style name="SlidingTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Widgets -->
    <!-- ActionBars, Buttons, TextFields and etc -->
    <style name="AppTheme.Widget.Toolbar" parent="Theme.MaterialComponents">
        <item name="android:background">@color/colorToolbar</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar.Guidelines</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionButton.Overflow</item>
    </style>

    <style name="AppTheme.Toolbar.Guidelines" parent="Widget.AppCompat.Toolbar">
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/toolbar_keyline</item>
        <item name="maxButtonHeight">48dp</item>
    </style>

    <style name="AppTheme.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@android:color/white</item>
        <item name="android:minWidth">48dp</item>
    </style>
    <style name="AppTheme.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

</resources>
