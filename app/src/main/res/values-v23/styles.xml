<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Core" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorDefault</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="md_corner_radius">8dp</item>
        <item name="md_color_button_text">@color/colorDefault</item>
    </style>

    <style name="AppTheme.FirstRun" parent="AppTheme.Core">
        <item name="android:windowAnimationStyle">@style/SlidingTransition</item>
    </style>

    <!-- UI Components -->
    <!-- BottomSheets, Dialogs etc -->

    <style name="AppTheme.BottomSheet" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorGenericBlack</item>
    </style>

</resources>